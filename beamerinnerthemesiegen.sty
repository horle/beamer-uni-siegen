			\path[name path=d2] (.8\paperwidth, 0) -- ++(110:100);
			\path[name intersections={of=hm and d1,by=il1}];
			\path[name intersections={of=hl and d1,by=il2}];
			\path[name intersections={of=hh and d2,by=ih1}];
			\path[name intersections={of=hm and d2,by=ih2}];
