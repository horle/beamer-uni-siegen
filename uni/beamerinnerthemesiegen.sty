\DeclareOptionBeamer{titlepage}{\def\beamer@X@titlepagealt{#1}}
\ExecuteOptionsBeamer{titlepage=1}
\ProcessOptionsBeamer

\mode<presentation>

\setsansfont{Calibri}
\setbeamerfont{title}{size=\LARGE, shape=\bfseries}
\setbeamerfont{author}{size=\scriptsize}
\setbeamerfont{date}{size=\scriptsize}

% Title page 1
\defbeamertemplate{title page}{alternative1}[1][]
{
	
	\pgfdeclarelayer{bg}    % declare background layer
	\pgfsetlayers{bg,main}
	
	\begin{tikzpicture}[anchor=north west]
		\useasboundingbox (1,0) rectangle(\the\paperwidth,\the\paperheight);
		\begin{pgfonlayer}{bg}
		\usebeamercolor{primary}
		\fill[fg] (0,.8\paperheight) -- (.497*\the\paperwidth,.8*\the\paperheight) -- ++(-110:100) -- cycle;
		
		\ifx\inserttitlegraphic\@empty%
		{
			\usebeamercolor{secondary}
			\fill[fg] (\the\paperwidth,.8*\the\paperheight) -- (.503*\the\paperwidth,.8*\the\paperheight) -- ++(-110:100) -- (\the\paperwidth,0) -- cycle;
		} \else {
			\clip (\the\paperwidth,.8*\the\paperheight) -- (.503*\the\paperwidth,.8*\the\paperheight) -- ++(-110:100) -- (\the\paperwidth,0) -- cycle;
			\node[anchor=south east] at ($(current page.south east)+(.2,-.1)$) {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par};
		} \fi
		\end{pgfonlayer}
	
		\node at (.03\paperwidth,.74\paperheight) {\begin{beamercolorbox}[wd=.35\paperwidth,#1]{titlelike}
			\usebeamerfont{title}\inserttitle\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth,.5\paperheight) {\begin{beamercolorbox}[wd=.35\paperwidth,#1]{titlelike}
			\usebeamerfont{subtitle}\insertsubtitle\par%
		\end{beamercolorbox}};
		
		\node[anchor=south west] at (.03\paperwidth,.2\paperheight) {\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{author}\insertauthor\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth,.2\paperheight) {\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{date}\insertdate\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth,.12\paperheight) 	{\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{date}uni-siegen.de\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth, .95\paperheight)
		{
			\includegraphics[height=.07\paperheight]{img/logo_uni.pdf}
		};
		
	\end{tikzpicture}
}

