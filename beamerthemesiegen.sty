\mode<presentation>

% Requirement
\RequirePackage{tikz}
\usetikzlibrary{calc,intersections}

\DeclareOptionBeamer{titlepage}{\PassOptionsToPackage{titlepage=#1}{beamerinnerthemesiegen}}
\ProcessOptionsBeamer

\setsansfont{Calibri}
\setbeamerfont{title}{size=\LARGE, shape=\bfseries}
\setbeamerfont{author}{size=\scriptsize}
\setbeamerfont{date}{size=\scriptsize}
\setbeamerfont{part number}{size*={220}{130}, shape=\bfseries}
\setbeamerfont{part title}{size*={30}{36}, shape=\bfseries}
\setbeamerfont{footline}{size=\tiny}
\setbeamerfont{frame title}{size=\large}
\setbeamerfont{section in head/foot}{size=\scriptsize}

% Settings
\useinnertheme{siegen}
\useoutertheme{siegen}
\usecolortheme{siegen}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]

\AtBeginPart{
	\begin{frame}
		\partpage
	\end{frame}
}


\def\ps@navigation@titlepage{%
  \setbeamertemplate{footline}{}
  \setbeamertemplate{headline}{}
  \setbeamertemplate{navigation symbols}{}
  \@nameuse{ps@navigation}}

\mode<all>
