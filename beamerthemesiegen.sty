\mode<presentation>

% Requirement
\RequirePackage{caption}
\RequirePackage{tikz}
\usetikzlibrary{calc,intersections}

\DeclareOptionBeamer{titlepage}{\PassOptionsToPackage{titlepage=#1}{beamerinnerthemesiegen}}
\ProcessOptionsBeamer

\setsansfont{Calibri}
\setbeamerfont{title}{size=\LARGE, shape=\bfseries}
\setbeamerfont{author}{size=\scriptsize}
\setbeamerfont{date}{size=\scriptsize}
\setbeamerfont{part number}{size*={220}{130}, shape=\bfseries}
\setbeamerfont{part title}{size*={28}{34}, shape=\bfseries}
\setbeamerfont{footline}{size=\tiny}
\setbeamerfont{frame title}{size=\large}
\setbeamerfont{section in head/foot}{size=\scriptsize}
\setbeamerfont{section in toc}{shape=\bfseries}
\setbeamerfont{caption}{size=\scriptsize}

% Settings
\useinnertheme{siegen}
\useoutertheme{siegen}
\usecolortheme{siegen}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]

\setbeamertemplate{section page}[alternative1]

\AtBeginSection{
	\begin{frame}
		\usebeamertemplate*{section page}
	\end{frame}
}

\newcommand{\tocpage}{\usebeamertemplate*{toc page}}
\newcommand{\sectionpagebackground}{}
\newcommand{\sectiondesign}[2][]{
	\renewcommand{\sectionpagebackground}{#1}
	\setbeamertemplate{section page}[alternative#2]
}
\newcommand{\closingpage}[2]{
	\setbeamertemplate{closing title}{#1}
	\setbeamertemplate{closing content}{#2}
	\usebeamertemplate*{closing page}
}

\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[subsections numbered]
\setbeamertemplate{blocks}[default]
\addtobeamertemplate{block begin}{%
	\setlength{\textwidth}{\linewidth}
}{}

\renewcommand{\arraystretch}{1.4}

\def\ps@navigation@titlepage{%
  \setbeamertemplate{footline}{}
  \setbeamertemplate{headline}{}
  \setbeamertemplate{navigation symbols}{}
  \@nameuse{ps@navigation}}

\mode<all>
