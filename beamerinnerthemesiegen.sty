\DeclareOptionBeamer{titlepage}{\def\beamer@X@titlepagealt{#1}}
\ExecuteOptionsBeamer{titlepage=1}
\ProcessOptionsBeamer

\mode<presentation>

\providebool{siegen@standout}
\define@key{beamerframe}{standout}[true]{%
  \booltrue{siegen@standout}
  \begingroup
    \setkeys{beamerframe}{c}
    \setkeys{beamerframe}{noframenumbering}
    \thispagestyle{empty}
    \setbeamertemplate{frametitle}{}
    \setbeamercolor{background canvas}{
        use=primary,
        bg=primary.fg
    }
    \usebeamercolor[fg]{titlelike}
}

\pretocmd{\beamer@reseteecodes}{%
    \ifbool{siegen@standout}{
      \endgroup
      \boolfalse{siegen@standout}
    }{}
  }{}{}

% Title page 1
\defbeamertemplate{title page}{alternative1}[1][]
{
	\pgfdeclarelayer{bg}    % declare background layer
	\pgfsetlayers{bg,main}
	\thispagestyle{navigation@titlepage}
	
	\begin{tikzpicture}[anchor=north west]
		\useasboundingbox (1,0) rectangle(\paperwidth,\paperheight);
		\begin{pgfonlayer}{bg}
		
		\path[name path=h] (0,.75\paperheight) -- (\paperwidth,.75\paperheight);
		\path[name path=d] (.56\paperwidth, 1.01\paperheight) -- ++(-110:100);
		\path[name intersections={of=h and d,by=i}];
		
		\usebeamercolor{primary}
		\fill[fg] (0,.75\paperheight) -- ($(i)-(1mm,0)$) -- ++(-110:100) -- cycle;
		
		\ifx\inserttitlegraphic\@empty%
		{
			\usebeamercolor{secondary}
			\fill[fg] (\paperwidth,.75\paperheight) -- (i) -- ++(-110:100) -- (\paperwidth,0) -- cycle;
		} \else {
			\clip (\paperwidth,.75\paperheight) -- (i) -- ++(-110:100) -- (\paperwidth,0) -- cycle;
			\node[anchor=south east] at ($(current page.south east)+(.2,-.1)$) {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par};
		} \fi
		\end{pgfonlayer}
	
		\node at (.03\paperwidth,.7\paperheight) {\begin{beamercolorbox}[wd=.35\paperwidth,#1]{titlelike}
			\usebeamerfont{title}\inserttitle\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth,.5\paperheight) {\begin{beamercolorbox}[wd=.35\paperwidth,#1]{titlelike}
			\usebeamerfont{subtitle}\insertsubtitle\par%
		\end{beamercolorbox}};
		
		\node[anchor=south west] at (.03\paperwidth,.2\paperheight) {\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{author}\insertauthor\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth,.2\paperheight) {\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{date}\insertdate\par%
		\end{beamercolorbox}};
		
		\node[anchor=south west] at (.03\paperwidth,.06\paperheight)	{\begin{beamercolorbox}[wd=.3\paperwidth,#1]{titlelike}
			\usebeamerfont{date}uni-siegen.de\par%
		\end{beamercolorbox}};
		
		\node at (.03\paperwidth, .95\paperheight) { \resizebox{!}{.12\paperheight}{\setlogo\par} };
		
	\end{tikzpicture}
}

